{
    "name": "Debian APT mirror",
    "id": "debian-apt-mirror",
    "version": "0.0.7",
    "description": "Modify the source of Debian's APT",
    "options": {
        "https": {
            "type": "boolean",
            "default": false,
            "description": "Whether to use https"
        },
        "host": {
            "type": "string",
            "default": "deb.debian.org",
            "description": "The host of the source"
        },
        "spath": {
            "type": "string",
            "default": "/debian",
            "description": "The path of the source"
        },
        "security": {
            "type": "boolean",
            "default": false,
            "description": "Whether to overwrite the security source"
        },
        "contrib": {
            "type": "boolean",
            "default": true,
            "description": "Whether to use contrib"
        },
        "non-free": {
            "type": "boolean",
            "default": true,
            "description": "Whether to use non-free"
        },
        "non-free-firmware": {
            "type": "boolean",
            "default": true,
            "description": "Whether to use non-free-firmware"
        }
    }
}
